<% layout ('layouts/boilerplate')%>
  <form action="/addgame" method="POST" class="mb-3" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="gameName" class="form-label">Name</label>
      <input type="text" class="form-control" id="gameName" name="title" placeholder="game name">
    </div>
    <div class="mb-3">
      <label for="creator" class="form-label">Creator</label>
      <input type="text" class="form-control" id="creator" name="creator" placeholder="creator name">
    </div>
    <div class="mb-3">
      <label class="form-label">Size</label>
      <input type="text" class="form-control" id="width" name="width" placeholder="width">
      <input type="text" class="form-control" id="height" name="height" placeholder="height">
    </div>
    <h3>Upload your files</h3>
    <div class="input-group mb-3">
      <input type="file" class="form-control" id="gameInput" name="gameFile" placeholder="game file (.swf)">
      <label class="input-group-text" for="gameInput">Game File(.swf)</label>
    </div>
    <div class="input-group mb-3">
      <input type="file" class="form-control" id="imageInput" name="imageFile" placeholder="image file">
      <label class="input-group-text" for="imageInput">Image file</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>