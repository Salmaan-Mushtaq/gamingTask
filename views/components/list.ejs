<% layout ('layouts/boilerplate')%>
<h1 class="text-center p-2">This is list of all the games we have</h1>
<div class="row container ms-4">
  <% for(let i=0; i<gamesData.length ; i++){ %>
  <div class="col-md-4">
    <div class="card mb-4 ms-4" style="width: 18rem;">
      <img src="/games/thumbnails/<%=gamesData[i].thumbnailFile%>" class="card-img-top" style="height:180px">
      <div class="card-body">
        <h5 class="card-title"><%=gamesData[i].title %> </h5>
        <p class="card-text">Game developed by <%= gamesData[i].creator %></p>
        <a href="/game/<%= gamesData[i].id %>" class="btn btn-primary ">Play Game</a>
        <a href="/game/<%= gamesData[i].id %>/edit" class="btn btn-warning ">Edit</a>
        <a href="/game/<%= gamesData[i].id %>/delete " class="btn btn-danger">Delete</a>
      </div>
    </div>
  </div>
  <% } %>
</div>